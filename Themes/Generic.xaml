<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:CalendarControl">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/CalendarControl;component/Themes/EventCalendarDateSetter.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/CalendarControl;component/Themes/DayCard.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/CalendarControl;component/Themes/WeekView.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/CalendarControl;component/Themes/MonthView.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type local:Calendar}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:Calendar}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <local:EventCalendarDateSetter x:Name="PART_eventCalendarDateSetter" 
                                                       Padding="10,10,10,30"
                                                       Date="{Binding Date, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                       IsToggled="{Binding IsToggled, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                       />

                        <ProgressBar IsIndeterminate="{Binding IsLoading, RelativeSource={RelativeSource TemplatedParent}}" Foreground="Green" Background="Transparent" BorderThickness="0" VerticalAlignment="Bottom"/>

                        <local:WeekView x:Name="weekView"
                                        Grid.Row="1"
                                        Events="{Binding Events, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        AddEventCommand="{Binding AddEventCommand, RelativeSource={RelativeSource TemplatedParent}}"
                                        EventDropCommand="{Binding EventDropCommand, RelativeSource={RelativeSource TemplatedParent}}"
                                        SelectedEventCommand="{Binding SelectedEventCommand, RelativeSource={RelativeSource TemplatedParent}}"
                                        DeleteCommand="{Binding DeleteCommand, RelativeSource={RelativeSource TemplatedParent}}"
                                        Visibility="{Binding ElementName=PART_eventCalendarDateSetter, Path=DateVisibility, Mode=TwoWay}"
                                        Date="{Binding ElementName=PART_eventCalendarDateSetter, Path=Date, Mode=TwoWay}"
                                        />

                        <local:MonthView Grid.Row="1"
                                         Events="{Binding Events,Mode=TwoWay}"
                                         Visibility="{Binding ElementName=PART_eventCalendarDateSetter, Path=YearVisibility, Mode=TwoWay}"
                                         EventDropCommand="{Binding EventDropCommand}"
                                         DeleteCommand="{Binding DeleteCommand}"
                                         AddEventCommand="{Binding AddEventCommand}"
                                         SelectedEventCommand="{Binding SelectedEventCommand}"
                                         Date="{Binding ElementName=PART_eventCalendarDateSetter, Path=Date, Mode=TwoWay}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>