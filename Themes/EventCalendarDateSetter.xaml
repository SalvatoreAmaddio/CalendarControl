<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CalendarControl"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    >
    <Style TargetType="{x:Type local:EventCalendarDateSetter}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:EventCalendarDateSetter}">
                    <Border Padding="{TemplateBinding Padding}" BorderThickness="0,0,0,.1" BorderBrush="Black" CornerRadius="5" Margin="50,0,0,0">
                        <WrapPanel DataContext="{Binding ., RelativeSource={RelativeSource TemplatedParent}}">
                            <WrapPanel.Resources>
                                <Style TargetType="Separator">
                                    <Setter Property="Background" Value="Transparent"/>
                                </Style>
                                <Style TargetType="Button">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="BorderThickness" Value=".5"/>
                                    <Setter Property="BorderBrush" Value="Black"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                </Style>
                            </WrapPanel.Resources>

                            <ToggleButton IsChecked="{Binding IsToggled}" 
                                          Margin="0,0,10,0" 
                                          ToolTip="Calendario Settimanale"/>

                            <Button x:Name="prevYear" Width="33" ToolTip="Anno precedente" Command="{Binding PreviousYearCommand}">
                                <WrapPanel>
                                    <materialDesign:PackIcon Kind="MenuLeft"/>
                                    <materialDesign:PackIcon Kind="MenuLeft"/>
                                </WrapPanel>
                            </Button>
                            <Button x:Name="prevMonth" Width="22" ToolTip="{Binding PreviousButtonTooltip}" Command="{Binding PreviousMonthCommand}">
                                <WrapPanel>
                                    <materialDesign:PackIcon Kind="MenuLeft"/>
                                </WrapPanel>
                            </Button>

                            <ComboBox Width="100" 
                                      x:Name="PAR_months" 
                                      Visibility="{Binding MonthVisibility}"
                                      HorizontalContentAlignment="Center" 
                                      ItemsSource="{Binding Months}" 
                                      SelectedIndex="{Binding SelectedMonthIndex}"
                                      Height="31"/>
                            <Separator Width="10" Visibility="{Binding MonthVisibility}"/>
                            <TextBox Text="{Binding Year, UpdateSourceTrigger=PropertyChanged}" 
                                     x:Name="PAR_year"
                                     Visibility="{Binding YearVisibility}"
                                     Width="40"
                                     HorizontalContentAlignment="Center" 
                                     Height="31"/>

                            <TextBox Width="150"
                                     Height="31"
                                     Text="{Binding Date, Mode=OneWay, StringFormat='{}{0:dd/MM/yyyy}'}"
                                     IsReadOnly="True"
                                     IsReadOnlyCaretVisible="True"
                                     HorizontalContentAlignment="Center"
                                     Visibility="{Binding DateVisibility}"
                                     materialDesign:HintAssist.Hint="Premi uno dei bottoni"
                                     materialDesign:HintAssist.HelperText="Settimana"/>

                            <Button x:Name="nextMonth" Width="22" ToolTip="{Binding NextButtonTooltip}" Command="{Binding NextMonthCommand}">
                                <WrapPanel>
                                    <materialDesign:PackIcon Kind="MenuRight"/>
                                </WrapPanel>
                            </Button>
                            <Button x:Name="nextYear" Width="33" ToolTip="Anno successivo" Command="{Binding NextYearCommand}">
                                <WrapPanel>
                                    <materialDesign:PackIcon Kind="MenuRight"/>
                                    <materialDesign:PackIcon Kind="MenuRight"/>
                                </WrapPanel>
                            </Button>

                            <Separator Width="10"/>
                            <Button Padding="5" Command="{Binding TodayCommand}">
                                <WrapPanel>
                                    <TextBlock Text="{Binding TodayContent}" Margin="0,0,5,0"/>
                                    <materialDesign:PackIcon Kind="CalendarToday"/>
                                </WrapPanel>
                            </Button>
                        </WrapPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>